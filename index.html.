<h1>Cobalt-60 Cancer Blaster</h1>
<p id="score">Score: 0</p>
<p id="timer">Time: 30</p>
<button onclick="startGame()">Start Game</button>

<div id="game-area"></div>

<script>
let score = 0;
let timeLeft = 30;
let gameInterval, spawnInterval;

function startGame() {
    score = 0;
    timeLeft = 30;
    document.getElementById('score').innerText = "Score: " + score;
    document.getElementById('timer').innerText = "Time: " + timeLeft;
    document.getElementById('game-area').innerHTML = "";
    clearInterval(gameInterval);
    clearInterval(spawnInterval);
    
    gameInterval = setInterval(() => {
        timeLeft--;
        document.getElementById('timer').innerText = "Time: " + timeLeft;
        if (timeLeft <= 0) {
            clearInterval(gameInterval);
            clearInterval(spawnInterval);
            alert("Game Over! You zapped " + score + " cancer cells!");
        }
    }, 1000);

    spawnInterval = setInterval(spawnCancer, 800);
}

function spawnCancer() {
    const gameArea = document.getElementById('game-area');
    const cancer = document.createElement('div');
    cancer.classList.add('cancer');
    cancer.style.top = Math.random() * (gameArea.clientHeight - 50) + "px";
    cancer.style.left = Math.random() * (gameArea.clientWidth - 50) + "px";
    
    cancer.onclick = function() {
        score++;
        document.getElementById('score').innerText = "Score: " + score;
        cancer.remove();
    };

    gameArea.appendChild(cancer);
    setTimeout(() => {
        if (cancer.parentNode) cancer.remove();
    }, 1500);
}
</script>

